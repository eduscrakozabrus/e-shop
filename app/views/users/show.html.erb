<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h4><%= gravatar_for @user %></h4>
      <h4><%= @user.name %></h4>
      <h4><%= @user.email %></h4>
      <%= link_to 'Edit profile', edit_user_path(@user) %>
      <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %>
    </section>
  </aside>
</div>
