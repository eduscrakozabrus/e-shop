<%= form_for @product do |f| %>
	<div class="field">
		<%= f.label :name  %><br />
		<%= f.text_field :name, size: 41 %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description, rows: 10, cols: 40%>
	</div>
	<div class="field">
		<%= f.label :price %><br />
		<%= f.text_field :price, size: 41 %>
	</div>
	<div class="field">
		<%= f.label 'In Stock' %><br />
		<%= f.text_field :quantity, size: 41 %>
	</div>
<% end %>