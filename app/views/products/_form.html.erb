 <div class="row">
 	<div class="col-md-6 col-md-offset-3">
		<%= form_for @product do |f| %>

		<%= render 'shared/error_messages', object: @product %>
  	
		<%= f.label :name  %><br />
		<%= f.text_field :name, size: 41 %>
	

		<%= f.label :description %><br />
		<%= f.text_area :description, rows: 10, cols: 40%>

		<%= f.label :price %><br />
		<%= f.text_field :price, size: 41 %>


		<%= f.label :in_stock %><br />
		<%= f.text_field :stock, size: 41 %>

		<%= f.label :image_url %><br />
		<%= f.text_field :image_url %>

	<br />

    	<%= f.submit "Create Product", class: "btn btn-primary" %>

<% end %>
<%= link_to 'Back', root_path %>
</div>
</div>