<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>In stock:</strong>
  <%= @product.stock %>
</p>

<p>
  <%= image_tag @product.image_url %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', root_path %> |
<%= link_to 'Delete', product_path(@product), method: :delete, data: { confirm: 'Are you sure?' } %> |
<% if @product.stock.zero? %>
		Out of stock
		<% else %>
		<%= link_to 'Add to Cart', add_to_cart_path(cart_id: session[:cart_id], product_id: @product.id), method: :post %>
		<% end %> |
<%#= number_field_tag :quantity, 1, { class: "number_tag" } %>
