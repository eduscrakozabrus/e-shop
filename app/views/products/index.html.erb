<h1>Products</h1>
<h1><%= link_to 'Your Cart', :controller => :cart, :action => :index %></h1>
<table>
	<% @products.each do |product| %>
	<tr>
		<td><%= link_to image_tag(product.image_url), product %></td>
		<td>
		<div class="name"><%= link_to product.name, product %></div>
		<div class="description"><%= product.description %></div>
		<div class=price>Price: <%= number_to_currency product.price, unit: 'PLN', format: '%n %u' %></div>
		<div class="quantity">In stock: <%= product.quantity  %></div>
		<div class="links"><%= link_to 'Show', product %>
		| <%= link_to 'Edit', edit_product_path(product) %>
		| <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
		</td>
	</tr>
	<% end %>
</table>
<br />

<%= link_to 'New product', new_product_path %>